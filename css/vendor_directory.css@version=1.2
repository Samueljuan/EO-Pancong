.vendor-directory-img {
    width: 100%;
    min-height: 100%;
}

hr {
    border-top: 1px solid #000;
    width: 50%;
}

a {
    color: #000;
}

a:link {
    text-decoration: none;
}
.card {
    border-radius: .5rem !important;
}

.logo {
    height: 200px;
    position: relative;
}
.logo img {
    max-height: 100%;
    max-width: 100%;
}
.shadow-card {
    -webkit-box-shadow: 0 0 24px 0 rgba(43, 43, 43, .24);
    box-shadow: 0 0 24px 0 rgba(43, 43, 43, .24);
    overflow: visible !important;
}

.vendor-list a:hover {
    color: initial !important;
}